<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= oneCampground.image %> " class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= oneCampground.title %></h5>
        <p class="card-text"><%= oneCampground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted">
          <%= oneCampground.location %>
        </li>
        <li class="list-group-item">
          $<%= oneCampground.price %>.00 per night
        </li>
      </ul>
      <div class="card-body">
        <a
          href="/campgrounds/<%=oneCampground._id%>/edit"
          class="card-link btn btn-info"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=oneCampground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
    </div>

    <div class="reviews">
      <!-- display reviews for each campround here if there are any, else don't show anything -->
    </div>

    <h2>Leave a review</h2>

    <form
      action="/campgrounds/<%- oneCampground._id %>/reviews "
      class="mb-3"
      method="POST"
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          min="0"
          max="5"
          id="rating"
          name="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="review">Review</label>
        <textarea
          class="form-control"
          name="body"
          id="review"
          cols="30"
          rows="3"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
