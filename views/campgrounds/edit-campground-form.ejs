<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campgroundToEdit._id%>?_method=PUT"
      method="POST"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="title"
          value="<%= campgroundToEdit.title %> "
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="location"
          value="<%= campgroundToEdit.location %> "
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="image"
          value="<%= campgroundToEdit.image %> "
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price:</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">$</span>
          <input
            id="price"
            type="text"
            class="form-control"
            value="<%= campgroundToEdit.price %> "
            aria-label="Username"
            aria-describedby="basic-addon1"
            name="price"
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Description</label>
        <textarea class="form-control" id="description" name="description">
        <%= campgroundToEdit.description %>
    </textarea
        >
      </div>

      <div class="mb-3">
        <button class="btn btn-success" type="submit">Edit campground</button>
      </div>
    </form>
  </div>
</div>
