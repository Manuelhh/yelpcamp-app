<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YelpCamp - All Campgrounds</title>
  </head>
  <body>
    <h1>This is the page for all the campgrounds</h1>
    <h2>List of all Campgrounds</h2>

    <div>
      <a href="/campgrounds/new">Add a campground</a>
    </div>

    <ul>
      <% for (let campground of allCampgrounds) { %>
      <a href="/campgrounds/<%=campground._id%>">
        <li>title: <%= campground.title %></li></a
      >
      location: <%= campground.location %> <% } %>
    </ul>
  </body>
</html>
